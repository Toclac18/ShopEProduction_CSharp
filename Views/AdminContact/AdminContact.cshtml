<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Contacts</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background: #f5f7fa;
            color: #333;
            line-height: 1.6;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Main Content */
        .main-content {
            margin-left: 300px;
            flex: 1;
            padding: 20px;
        }

        .header {
            background: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header input {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 20px;
            width: 300px;
        }

        .header .actions button {
            padding: 8px 15px;
            border: none;
            border-radius: 20px;
            margin-left: 10px;
            cursor: pointer;
        }

        .header .actions .import-btn {
            background: #6c5ce7;
            color: white;
        }

        .header .actions .export-btn {
            background: #e84393;
            color: white;
        }

        /* Stats Cards */
        .stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat-card {
            flex: 1;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .stat-card h4 {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .stat-card p {
            font-size: 24px;
            font-weight: bold;
        }

        .stat-card.all { background: #feca57; }
        .stat-card.subscribed { background: #1dd1a1; }
        .stat-card.pending { background: #54a0ff; }
        .stat-card.blocked { background: #ff6b6b; }

        /* Contact Details and Meetings */
        .content {
            display: flex;
            gap: 20px;
        }

        .contact-details {
            flex: 2;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .contact-details img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .contact-details h3 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .contact-details p {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .meetings {
            flex: 1;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .meetings h3 {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .meeting-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-left: 4px solid #6c5ce7;
            margin-bottom: 10px;
        }

        .meeting-item p {
            font-size: 14px;
        }

        .meeting-item img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
		@Html.Partial("_Sidebar")
        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <input type="text" placeholder="Search Users, Events and more...">
                <div class="actions">
                    <button class="import-btn">Import</button>
                    <button class="export-btn">Export</button>
                    <button>Category</button>
                </div>
            </div>

            <div class="stats">
                <div class="stat-card all">
                    <h4>ALL CONTACTS</h4>
                    <p>15</p>
                </div>
                <div class="stat-card subscribed">
                    <h4>SUBSCRIBED</h4>
                    <p>4</p>
                </div>
                <div class="stat-card pending">
                    <h4>PENDING APPROVAL</h4>
                    <p>6</p>
                </div>
                <div class="stat-card blocked">
                    <h4>BLOCKED</h4>
                    <p>3</p>
                </div>
            </div>

            <div class="content">
                <div class="contact-details">
                    <h3>Contact Details</h3>
                    <img src="https://via.placeholder.com/80" alt="Avatar">
                    <h3>Elizabeth Claire</h3>
                    <p>elizabethclaire@gmail.com</p>
                    <p>Company Name: ABC Industries Pvt Ltd</p>
                    <p>City & Country: New York, United States</p>
                    <p>Details: Lorem ipsum is simply dummy text of the printing and typesetting industry. Lorem ipsum has been the industry's standard dummy text.</p>
                </div>

                <div class="meetings">
                    <h3>Meeting Activity</h3>
                    <div class="meeting-item">
                        <div>
                            <p>10:00 to 10:30 am</p>
                            <p>Mobile Application Release</p>
                            <p>Lead by Hannah</p>
                        </div>
                        <img src="https://via.placeholder.com/30" alt="Avatar">
                    </div>
                    <div class="meeting-item">
                        <div>
                            <p>12:00 to 12:30 pm</p>
                            <p>General Meeting</p>
                            <p>Lead by Madeleine Lisa</p>
                        </div>
                        <img src="https://via.placeholder.com/30" alt="Avatar">
                    </div>
                    <div class="meeting-item">
                        <div>
                            <p>04:00 to 05:00 pm</p>
                            <p>Client Visit</p>
                            <p>Lead by Hemmings Edmunds</p>
                        </div>
                        <img src="https://via.placeholder.com/30" alt="Avatar">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>