@model ShopEProduction.DTOs.ProfileDataUserDto

@{
    ViewData["Title"] = "Update Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            margin-top: 100px;
            background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .update-container {
            max-width: 700px;
            margin: 50px auto;
            padding: 30px;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease;
        }

            .update-container:hover {
                transform: translateY(-5px);
            }

        .update-header {
            font-size: 2.2rem;
            color: #1e3a8a;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 600;
            color: #34495e;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 12px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            }

        .profile-image {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border: 5px solid #3498db;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .profile-image:hover {
                transform: scale(1.05);
            }

        .btn-save {
            background: #3498db;
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-save:hover {
                background: #2980b9;
                transform: translateY(-2px);
            }

        .btn-cancel {
            background: #95a5a6;
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-cancel:hover {
                background: #7f8c8d;
                transform: translateY(-2px);
            }

        .text-danger {
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .custom-file-upload {
            display: inline-block;
            padding: 10px 20px;
            background: #ecf0f1;
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.3s ease;
            font-weight: 500;
            color: #34495e;
        }

            .custom-file-upload:hover {
                background: #d5dbdb;
            }

        input[type="file"] {
            display: none; /* Hide the default file input */
        }

    </style>
</head>
<body>
    @Html.Partial("_Header")
    <div class="update-container">
        <h2 class="update-header">Update Profile</h2>
        <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="text-center mb-4">
                <img  id="imagePreview"
                      src="@Url.Content(Model.UserImage ?? "~/images/default-profile.png")?v=@DateTime.Now.Ticks"
                      alt="Profile Image"
                      class="profile-image rounded-circle">

                <div class="mt-3">
                    <label for="userImageFile" class="custom-file-upload">Choose New Image</label>
                    <input type="file" id="userImageFile" name="userImageFile" accept="image/*" onchange="previewImage(event)" />
                    <span asp-validation-for="userImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input name="Username" class="form-control" value="@Model.Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fullname" class="form-label">Full Name</label>
                <input name="Fullname" class="form-control" value="@Model.Fullname" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input name="Email" class="form-control" type="email" value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Phonenumber" class="form-label">Phone Number</label>
                <input name="Phonenumber" class="form-control" value="@Model.Phonenumber" />
                <span asp-validation-for="Phonenumber" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-save text-white">Save Changes</button>
                <a href="@Url.Action("ShowProfile", "Profile")" class="btn btn-cancel text-white">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    document.getElementById('imagePreview').src = reader.result;
                };
                reader.readAsDataURL(file);
            }
        }

        // Optional: Handle form submission feedback
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                console.log('Form submitted'); // Debug form submission
            });
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    @Html.Partial("_Footer")
</body>
</html>