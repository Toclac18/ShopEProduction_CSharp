@model ShopEProduction.DTOs.ProfileDataUserDto

@{
    ViewData["Title"] = "My Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            margin-top: 150px;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .profile-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .profile-container:hover {
                transform: translateY(-5px);
            }

        .profile-header {
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .profile-card {
            border: none;
            background: linear-gradient(145deg, #ffffff, #f1f5f9);
            border-radius: 15px;
            padding: 20px;
        }

        .profile-image {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border: 5px solid #3498db;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .profile-image:hover {
                transform: scale(1.05);
            }

        .profile-info h4 {
            color: #34495e;
            font-weight: 600;
            margin-bottom: 20px;
            border-bottom: 2px solid #3498db;
            padding-bottom: 5px;
        }

        .profile-info p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 15px;
        }

        .profile-info strong {
            color: #2c3e50;
            font-weight: 600;
        }

        .btn-edit {
            background: #3498db;
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-edit:hover {
                background: #2980b9;
                transform: translateY(-2px);
            }

        .alert-success {
            border-radius: 10px;
            font-size: 1.1rem;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
@Html.Partial("_Header")
<body>
    <div class="profile-container">
        <h2 class="profile-header text-center mb-4">My Profile</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="profile-card">
            <div class="row align-items-center">

                <div class="col-md-4 text-center">
                    <img src="@Url.Content(Model.UserImage ?? "~/images/default-profile.png")?v=@DateTime.Now.Ticks"
                         alt="Profile Image"
                         class="profile-image rounded-circle">
                </div>

                <div class="col-md-8 profile-info">
                    <h4>@Model.Fullname</h4>
                    <p><strong>Username:</strong> @Model.Username</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @(Model.Phonenumber ?? "Not provided")</p>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("UpdateProfile", "Profile")" class="btn btn-edit text-white">Edit Profile</a>
                <button style="margin: 10px" class="btn btn-outline-secondary" onclick="history.back()">
					<i class="fas fa-arrow-left"></i> Back
				</button>
            </div>
        </div>
    </div>
</body>
@Html.Partial("_Footer")
</html>